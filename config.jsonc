        "ignored-sinks": ["Easy Effects Sink"]
    },
    "wlr/taskbar": {
        "on-click": "activate"
    },
    "backlight": {
        "format": "{percent}% {icon}",
        "format-icons": ["üåô", "‚òÄÔ∏è"]
    },
    "custom/power": {
        "format": " ‚èª ",
		"tooltip": false,
        "on-click": "wlogout"
    }, 
    "custom/blueman": {
        "format": " Ôäì ",
        "tooltip": false,
        "on-click": "blueman-manager"
    }, 
    "custom/hyprshot": {
        "format": " üñª ",
        "tooltip": false,
        "on-click": "hyprshot -zm region"
    },
    "custom/swaync": {
        "tooltip": false,
        "format": " {icon} ",
        "format-icons": {
          "notification": "ÔÇ¢<span foreground='red'><sup>ÔëÑ</sup></span>",
