    "group/quicksettings": {
        "orientation": "horizontal",
        "modules": [
            "custom/hyprshot",
            "custom/lightmode",
            "custom/darkmode",
            "custom/blueman",
            "custom/swaync",
            "battery",
        ]
    },
    "group/backlightAndPulseaudio": {
        "orientation": "horizontal",
        "modules": [
            "backlight",
            "pulseaudio"
        ]
    }
}
