// -*- mode: jsonc -*-
{
    "layer": "top", // Waybar at top layer
    "position": "top", // Waybar position (top|bottom|left|right)
    // "height": 24, // Waybar height (to be removed for auto height)
    // "width": 1000, // Waybar width
    "spacing": 3, // Gaps between modules (4px)
    "margin": 3,

    "modules-left": [
        "wlr/taskbar",
    ],
    "modules-center": [
        "hyprland/workspaces",
    ],
    "modules-right": [
        "mpd",
        "group/rightsideAddons",
        "tray",
        "group/quicksettings",
        "group/backlightAndPulseaudio",
        "group/clockAndBattery",
        "custom/swaync",
        "custom/power",
    ],

    // Modules configuration
    "hyprland/workspaces": {
        "format": "{name} {icon}",
        "format-icons": {
            "default": "Ôáé ",
            "empty": "",
            "active": "ÔÅ† ",
            "special": "ÔÅ± "
        },
        "show-special": true,
        "sort-by": "default"
    },
    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "‚òïÔ∏è",
            "deactivated": "‚ùÑÔ∏è"
        }
    },
    "tray": {
        // "icon-size": 21,
        "spacing": 10
    },
    "clock": {
        "format": "{:%b %d  %H:%M}",
        "format-alt": "{:%A, %B %d, %Y (%R)}",
        "tooltip-format": "<tt><small>{calendar}</small></tt>",
        "calendar": {
                    "mode"          : "year",
                    "mode-mon-col"  : 3,
                    "weeks-pos"     : "right",
                    "on-scroll"     : 1,
                    "format": {
                              "months":     "<span color='#ffead3'><b>{}</b></span>",
                              "days":       "<span color='#ecc6d9'><b>{}</b></span>",
                              "weeks":      "<span color='#99ffdd'><b>W{}</b></span>",
                              "weekdays":   "<span color='#ffcc66'><b>{}</b></span>",
                              "today":      "<span color='#ff6699'><b><u>{}</u></b></span>"
                              }
                    },
        "actions":  {
                    "on-click-right": "mode",
                    "on-scroll-up": "tz_up",
                    "on-scroll-down": "tz_down",
                    "on-scroll-up": "shift_up",
                    "on-scroll-down": "shift_down"
                    }
    },
    "battery": {
        "tooltip": false,
        "states": {
            // "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "{capacity}% {icon}",
        "format-full": "{capacity}% {icon}",
        "format-charging": "{capacity}% ÔÉß",
        "format-plugged": "{capacity}% ÔÉß",
        "format-alt": "{time} {icon}",
        // "format-good": "", // An empty format will hide the module
        // "format-full": "",
        "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"]
    },
    "power-profiles-daemon": {
        "format": "{icon}",
        "tooltip": false,
        "format-icons": {
            "default": "üîå",
            // "performance": "üöÄ",
            // "balanced": "‚öñÔ∏è",
            // "power-saver": "üå±"
        }
    },
    "pulseaudio": {
        "format": "{icon} ",
        "format-bluetooth": "{icon}",
        "format-muted": "ü§ê",
        "format-icons": {
            "headphone": "üéß",
            "hands-free": "üì≤",
            "headset": "üéß",
            "phone": "üì±",
            "phone-muted": "üìµ",
            "portable": "üîà",
            "car": "üöó",
            "default": ["ü§´", "üó£Ô∏è"]
        },
        "scroll-step": 1,
        "on-click": "pavucontrol",
        "ignored-sinks": ["Easy Effects Sink"]
    },
    "wlr/taskbar": {
        "on-click": "activate"
    },
    "backlight": {
        "format": "{icon}",
        "format-icons": ["üåô", "‚òÄÔ∏è"], 
    },
    "custom/power": {
        "format": " ‚èª ",
		"tooltip": false,
        "on-click": "wlogout"
    }, 
    "custom/blueman": {
        "format": " Ôäì ",
        "tooltip": false,
        "on-click": "blueman-manager"
    }, 
    "custom/hyprshot": {
        "format": " üñª ",
        "tooltip": false,
        "on-click": "hyprshot -zm region"
    },
    "custom/swaync": {
        "tooltip": false,
        "format": " {icon} ",
        "format-icons": {
          "notification": "ÔÉ≥<span foreground='red'><sup>ÔëÑ</sup></span>",
          "none": "ÔÉ≥",
          "dnd-notification": "Ôá∂<span foreground='red'><sup>ÔëÑ</sup></span>",
          "dnd-none": "Ôá∂",
          "inhibited-notification": "ÔÉ≥<span foreground='red'><sup>ÔëÑ</sup></span>",
          "inhibited-none": "ÔÉ≥",
          "dnd-inhibited-notification": "Ôá∂<span foreground='red'><sup>ÔëÑ</sup></span>",
          "dnd-inhibited-none": "Ôá∂"
        },
        "return-type": "json",
        "exec-if": "which swaync-client",
        "exec": "swaync-client -swb",
        "on-click": "swaync-client -t -sw",
        "on-click-right": "swaync-client -d -sw",
        "escape": true
    },
    "custom/lightmode": {
        "tooltip": false,
        "format": " ‚òÄÔ∏è ",
        "on-click": "gsettings set org.gnome.desktop.interface color-scheme 'prefer-light'"
    },
    "custom/darkmode": {
        "tooltip": false,
        "format": " üåò ",
        "on-click": "gsettings set org.gnome.desktop.interface color-scheme 'prefer-dark'"
    },
    "custom/obs": {
        "tooltip": false,
        "format": " üìπ ",
        "on-click": "flatpak run com.obsproject.Studio"
    },
    "group/quicksettings": {
        "orientation": "horizontal",
        "modules": [
            "custom/hyprshot",
            "custom/obs",
            "group/lightmodeDarkmode",
            "custom/blueman",
        ]
    },
    "group/backlightAndPulseaudio": {
        "orientation": "horizontal",
        "modules": [
            "group/backlightSlider",
            "group/pulseaudioSlider"
        ]
    },
    "group/backlightSlider": {
        "orientation": "horizontal",
        "modules": [
            "backlight",
            "backlight/slider"
        ], 
        "drawer": {
            "transition-duration": 300,
            "transition-left-to-right": false,
        }
    },
    "group/pulseaudioSlider": {
        "orientation": "horizontal",
        "modules": [
            "pulseaudio",
            "pulseaudio/slider"
        ], 
        "drawer": {
            "transition-duration": 300,
            "transition-left-to-right": false,
        }
    },
    "group/clockAndBattery": {
        "orientation": "horizontal",
        "modules": [
            "clock",
            "battery"
        ]
    }, 
    "group/rightsideAddons": {
        "orientation": "horizontal",
        "modules": [
            "idle_inhibitor",
            "power-profiles-daemon",
        ]
    }, 
    "group/lightmodeDarkmode": {
        "orientation": "horizontal",
        "modules": [
            "custom/lightmode",
            "custom/darkmode"
        ]
    }
}
