// -*- mode: jsonc -*-
{
    "layer": "top", // Waybar at top layer
    "position": "top", // Waybar position (top|bottom|left|right)
    // "height": 24, // Waybar height (to be removed for auto height)
    // "width": 1000, // Waybar width
    "spacing": 3, // Gaps between modules (4px)
    "margin": 3,

    "modules-left": [
        "wlr/taskbar",
    ],
    "modules-center": [
        "hyprland/workspaces",
    ],
    "modules-right": [
        "mpd",
        "group/rightsideAddons",
        "tray",
        "group/quicksettings",
        "group/backlightAndPulseaudio",
        "group/clockAndBattery",
        "custom/swaync",
        "custom/power",
    ],

    // Modules configuration
    "hyprland/workspaces": {
        "format": "{name} {icon}",
        "format-icons": {
            "default": "ï‡ ",
            "empty": "",
            "active": "ï  ",
            "special": "ï± "
        },
        "show-special": true,
        "sort-by": "default"
    },
    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "â˜•ï¸",
            "deactivated": "â„ï¸"
        }
    },
    "tray": {
        // "icon-size": 21,
        "spacing": 10
    },
    "clock": {
        "format": "{:%b %d  %H:%M}",
        "format-alt": "{:%A, %B %d, %Y (%R)}",
        "tooltip-format": "<tt><small>{calendar}</small></tt>",
        "calendar": {
                    "mode"          : "year",
                    "mode-mon-col"  : 3,
                    "weeks-pos"     : "right",
                    "on-scroll"     : 1,
                    "format": {
                              "months":     "<span color='#ffead3'><b>{}</b></span>",
                              "days":       "<span color='#ecc6d9'><b>{}</b></span>",
                              "weeks":      "<span color='#99ffdd'><b>W{}</b></span>",
                              "weekdays":   "<span color='#ffcc66'><b>{}</b></span>",
                              "today":      "<span color='#ff6699'><b><u>{}</u></b></span>"
                              }
                    },
        "actions":  {
                    "on-click-right": "mode",
                    "on-scroll-up": "tz_up",
                    "on-scroll-down": "tz_down",
                    "on-scroll-up": "shift_up",
                    "on-scroll-down": "shift_down"
                    }
    },
    "battery": {
        "tooltip": false,
        "states": {
            // "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "{capacity}% {icon}",
        "format-full": "{capacity}% {icon}",
        "format-charging": "{capacity}% ïƒ§",
        "format-plugged": "{capacity}% ïƒ§",
        "format-alt": "{time} {icon}",
        // "format-good": "", // An empty format will hide the module
        // "format-full": "",
        "format-icons": ["ï‰„", "ï‰ƒ", "ï‰‚", "ï‰", "ï‰€"]
    },
    "power-profiles-daemon": {
        "format": "{icon}",
        "tooltip": false,
        "format-icons": {
            "default": "ğŸ”Œ",
            // "performance": "ğŸš€",
            // "balanced": "âš–ï¸",
            // "power-saver": "ğŸŒ±"
        }
    },
    "pulseaudio": {
        "format": "{icon} {format_source}",
        "format-bluetooth": "{icon} {format_source}",
        "format-muted": "ğŸ¤",
        "format-icons": {
            "headphone": "ğŸ§",
            "hands-free": "ğŸ“²",
            "headset": "ğŸ§",
            "phone": "ğŸ“±",
            "phone-muted": "ğŸ“µ",
            "portable": "ğŸ”ˆ",
            "car": "ğŸš—",
            "default": ["ğŸ¤«", "ğŸ—£ï¸"]
        },
        "format-source": "ğŸ™ï¸",
        "format-source-muted": "ğŸ”‡",
        "scroll-step": 1,
        "on-click": "pavucontrol",
        "ignored-sinks": ["Easy Effects Sink"]
    },
    "wlr/taskbar": {
        "on-click": "activate"
    },
    "backlight": {
        "format": "{icon}",
        "format-icons": ["ğŸŒ™", "â˜€ï¸"], 
    },
    "custom/power": {
        "format": " â» ",
		"tooltip": false,
        "on-click": "wlogout"
    }, 
    "custom/blueman": {
        "format": " ïŠ“ ",
        "tooltip": false,
        "on-click": "blueman-manager"
    }, 
    "custom/hyprshot": {
        "format": " ğŸ–» ",
        "tooltip": false,
        "on-click": "hyprshot -zm region"
    },
    "custom/swaync": {
        "tooltip": false,
        "format": " {icon} ",
        "format-icons": {
          "notification": "ïƒ³<span foreground='red'><sup>ï‘„</sup></span>",
          "none": "ïƒ³",
          "dnd-notification": "ï‡¶<span foreground='red'><sup>ï‘„</sup></span>",
          "dnd-none": "ï‡¶",
          "inhibited-notification": "ïƒ³<span foreground='red'><sup>ï‘„</sup></span>",
          "inhibited-none": "ïƒ³",
          "dnd-inhibited-notification": "ï‡¶<span foreground='red'><sup>ï‘„</sup></span>",
          "dnd-inhibited-none": "ï‡¶"
        },
        "return-type": "json",
        "exec-if": "which swaync-client",
        "exec": "swaync-client -swb",
        "on-click": "swaync-client -t -sw",
        "on-click-right": "swaync-client -d -sw",
        "escape": true
    },
    "custom/lightmode": {
        "tooltip": false,
        "format": " â˜€ï¸ ",
        "on-click": "gsettings set org.gnome.desktop.interface color-scheme 'prefer-light'"
    },
    "custom/darkmode": {
        "tooltip": false,
        "format": " ğŸŒ˜ ",
        "on-click": "gsettings set org.gnome.desktop.interface color-scheme 'prefer-dark'"
    },
    "custom/obs": {
        "tooltip": false,
        "format": " ğŸ“¹ ",
        "on-click": "flatpak run com.obsproject.Studio"
    },
    "group/quicksettings": {
        "orientation": "horizontal",
        "modules": [
            "custom/hyprshot",
            "custom/obs",
            "group/lightmodeDarkmode",
            "custom/blueman",
        ]
    },
    "group/backlightAndPulseaudio": {
        "orientation": "horizontal",
        "modules": [
            "group/backlightSlider",
            "group/pulseaudioSlider"
        ]
    },
    "group/backlightSlider": {
        "orientation": "horizontal",
        "modules": [
            "backlight",
            "backlight/slider"
        ], 
        "drawer": {
            "transition-duration": 300,
            "transition-left-to-right": false,
        }
    },
    "group/pulseaudioSlider": {
        "orientation": "horizontal",
        "modules": [
            "pulseaudio",
            "pulseaudio/slider"
        ], 
        "drawer": {
            "transition-duration": 300,
            "transition-left-to-right": false,
        }
    },
    "group/clockAndBattery": {
        "orientation": "horizontal",
        "modules": [
            "clock",
            "battery"
        ]
    }, 
    "group/rightsideAddons": {
        "orientation": "horizontal",
        "modules": [
            "idle_inhibitor",
            "power-profiles-daemon",
        ]
    }, 
    "group/lightmodeDarkmode": {
        "orientation": "horizontal",
        "modules": [
            "custom/lightmode",
            "custom/darkmode"
        ]
    }
}
